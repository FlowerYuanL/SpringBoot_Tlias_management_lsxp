<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
  mapper 根标签：
  - namespace（必需）：绑定 Mapper 接口的全限定名（包名+接口名）
  - 作用：建立 XML 文件与 Java 接口的关联[1,6,8](@ref)
-->
<mapper namespace="com.lsxp.mapper.EmpExprMapper">

    <!-- 批量保存员工工作经历信息 -->
    <insert id="insertBatch" >
        insert into emp_expr(emp_id, begin, end, company, job)
        values
            <foreach collection="list" separator="," item="expr">
                (#{expr.empId},#{expr.begin},#{expr.end},#{expr.company},#{expr.job})
            </foreach>
    </insert>
</mapper>